<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/bounce_interpolator">

    <alpha
        android:duration="3000"
        android:fromAlpha="0"
        android:toAlpha="1.0" />

    <!--El duration hay que escribirlo a mano(significa la duracion de la animacion), from alpha es la opacidad inicial
    y to alpha es la opacidad final -->

</set>