<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_context"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrim" />

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myswipe" />

    <TextView
        android:id="@+id/tvNombre"
        style="@style/TipoLetra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tvNombre"
        app:layout_constraintTop_toBottomOf="@+id/fotoPerfil" />

    <TextView
        android:id="@+id/tvContraseña"
        style="@style/TipoLetra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:text="@string/tvContraseña"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButtonMain5"
        style="@style/ButtonOutlined"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:onClick="cambiarventana2"
        android:text="@string/ok"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvContraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.button.MaterialButton>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/myswipe"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/taporswipetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="long tap or swipe to refresh"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="normal" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.alespero.expandablecardview.ExpandableCardView
        app:title="Carta Expandible"
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:startExpanded="false"
        app:inner_view="@layout/expandable_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>